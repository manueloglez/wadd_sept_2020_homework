<%- include('./partials/header') %> 

<div class="col-md-6">
    <h1>Bill Splitter</h1>
    <form class="mt-3" action="/" method="POST">
        <label for="amount">Amount</label>
        <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" id="basic-addon1">$</span>
            </div>
            <input type="text" name="amount" id="amount" class="form-control" placeholder="10.0">
        </div>
        <label for="tax">Tax</label>
        <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" id="basic-addon1">%</span>
            </div>
            <input type="text" name="tax" id="tax" class="form-control" placeholder="10.0">
        </div>
        <label for="tip">Tip</label>
        <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" id="basic-addon1">%</span>
            </div>
            <input type="text" name="tip" id="tip" class="form-control" placeholder="10.0">
        </div>
        <label for="people">Number of people</label>
        <div class="input-group mb-3">
            <input type="text" id="people" name="people" class="form-control" placeholder="5">
        </div>
        <input type="submit" value="Submit">
    </form>
    <% if (total) { %> 
        <h1 class="mt-5">Every person must pay $<%= total %> </h1>
    <% } %> 
</div>

<%- include('./partials/footer') %> 